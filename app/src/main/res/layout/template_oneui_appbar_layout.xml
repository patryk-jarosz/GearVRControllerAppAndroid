<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/oneui.linearParent">

    <!--    COLLAPSING LAYOUT - WRAPPER   -->
    <com.google.android.material.card.MaterialCardView
        style="@style/oneui.wrapperCard">
        <!--    COORDINATOR LAYOUT  -->
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            style="@style/oneui.coordinatorLayout">
            <!--    APP BAR LAYOUT  -->
            <com.google.android.material.appbar.AppBarLayout
                style="@style/oneui.appBarLayout">
                <!--    COLLAPSING TOOLBAR LAYOUT  -->
                <com.google.android.material.appbar.CollapsingToolbarLayout
                    style="@style/oneui.collapsingToolbarLayout">
                    <LinearLayout
                        style="@style/oneui.collapsingToolbarLayoutInnerLinearContent">
                        <!--    INNER LINEAR CONTENT HERE  -->
                        <TextView
                            style="@style/oneui.expandedLinearToolbarTitle"
                            android:text="@string/app_name"/>

                    </LinearLayout>
                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <!--    COLLAPSED TOOLBAR LINEAR  -->
            <LinearLayout
                style="@style/oneui.collapsedLinearToolbar">
                <!--    CONTENT HERE (collapsed toolbar)  -->
                <TextView
                    style="@style/oneui.collapsedLinearToolbarTitle"
                    android:text="@string/app_name"/>

            </LinearLayout>

            <!--    NESTED SCROLLVIEW  -->
            <androidx.core.widget.NestedScrollView
                style="@style/oneui.nestedScrollView">
                <LinearLayout
                    style="@style/oneui.nestedScrollViewInnerLinearContent">
                    <!--    INNER LINEAR CONTENT HERE  -->


                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </com.google.android.material.card.MaterialCardView>

    <!--    TODO: FOOTER - WRAPPER  -->
    <com.google.android.material.card.MaterialCardView
        android:visibility="gone"
        android:clipChildren="true"
        android:layout_weight="1"
        app:cardBackgroundColor="#010101"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <HorizontalScrollView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:text="Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:text="Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:text="Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:text="Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
        </HorizontalScrollView>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>