<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:fitsSystemWindows="true"
    android:id="@+id/activitymain2_linear_parent_root"
    android:background="#000000"
    >


<com.google.android.material.card.MaterialCardView
    android:layout_weight="1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:fitsSystemWindows="true"
    app:cardElevation="0dp"
    app:cardCornerRadius="25dp"
    android:clipChildren="true"
    android:id="@+id/activitymain2_card_parent"
    app:cardBackgroundColor="#010101"
    >


<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:fitsSystemWindows="true"
    android:id="@+id/activitymain2_coordinatorlayout_parent"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:stateListAnimator="@drawable/appbar_remove_elevation"
        android:fitsSystemWindows="true"
        android:background="#00000000"
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:fitsSystemWindows="true"
            app:statusBarScrim="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:id="@+id/lineartop"
                android:gravity="center"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier=".5"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="280dp">

                <ImageView
                    android:layout_marginBottom="-100dp"
                    android:src="@mipmap/gearvrcontroller_nologo"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"/>

                <TextView
                    android:id="@+id/lineartop_txt"
                    android:background="@drawable/gradient_background_black"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="#FAFAFA"
                    android:layout_gravity="center"
                    android:gravity="bottom|center_horizontal"
                    android:textSize="40sp"
                    android:text="@string/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"/>
                <TextView
                    android:visibility="gone"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="#9C9C9C"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="Settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!--Now add the NestedScollView-->

    <com.google.android.material.card.MaterialCardView
        app:cardBackgroundColor="#00000000"
        android:elevation="1dp"
        app:cardCornerRadius="0dp"
        app:shapeAppearanceOverlay="@style/AppTopBarShapeAppearance"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:cardElevation="0dp"
        >

        <LinearLayout
            app:contentScrim="#e2e2e2"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:fontFamily="@font/roboto_regular"
                android:id="@+id/txttoolbar"
                android:textColor="#FAFAFA"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="19sp"
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.core.widget.NestedScrollView
        android:background="#00000000"
        android:paddingTop="55dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.app.gearvrcontrollerapp.OneUICompCategoryView
                android:id="@+id/activitymain2_oneuicompcategoryview_connect"
                app:compCategoryViewTitleText="Connect"
                app:compCategoryViewDescriptionText="Connect to Controller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.app.gearvrcontrollerapp.OneUICompCategoryView
                android:layout_marginTop="10dp"
                android:id="@+id/activitymain2_oneuicompcategoryview_disconnect"
                app:compCategoryViewTitleText="Disconnect"
                app:compCategoryViewDescriptionText="Disconnect from Controller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <com.app.gearvrcontrollerapp.OneUICompCategoryView
                android:layout_marginTop="10dp"
                app:compCategoryViewTitleText="Disconnect"
                app:compCategoryViewDescriptionText="Disconnect from Controller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.app.gearvrcontrollerapp.OneUICompCategoryView
                android:layout_marginTop="10dp"
                app:compCategoryViewTitleText="Disconnect"
                app:compCategoryViewDescriptionText="Disconnect from Controller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.app.gearvrcontrollerapp.OneUICompCategoryView
                android:layout_marginTop="10dp"
                app:compCategoryViewTitleText="Disconnect"
                app:compCategoryViewDescriptionText="Disconnect from Controller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.app.gearvrcontrollerapp.OneUICompCategoryView
                android:layout_marginTop="10dp"
                app:compCategoryViewTitleText="Disconnect"
                app:compCategoryViewDescriptionText="Disconnect from Controller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.app.gearvrcontrollerapp.OneUICompCategoryView
                android:layout_marginTop="10dp"
                app:compCategoryViewTitleText="Disconnect"
                app:compCategoryViewDescriptionText="Disconnect from Controller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.app.gearvrcontrollerapp.OneUICompCategoryView
                android:layout_marginTop="10dp"
                app:compCategoryViewTitleText="Disconnect"
                app:compCategoryViewDescriptionText="Disconnect from Controller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.app.gearvrcontrollerapp.OneUICompCategoryView
                android:layout_marginTop="10dp"
                app:compCategoryViewTitleText="Disconnect"
                app:compCategoryViewDescriptionText="Disconnect from Controller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.app.gearvrcontrollerapp.OneUICompCategoryView
                android:layout_marginTop="10dp"
                app:compCategoryViewTitleText="Disconnect"
                app:compCategoryViewDescriptionText="Disconnect from Controller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.app.gearvrcontrollerapp.OneUICompCategoryView
                android:layout_marginTop="10dp"
                app:compCategoryViewTitleText="Disconnect"
                app:compCategoryViewDescriptionText="Disconnect from Controller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

</com.google.android.material.card.MaterialCardView>
    <LinearLayout
        android:layout_weight="1"
        android:paddingBottom="56dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="text"/>

    </LinearLayout>
</LinearLayout>